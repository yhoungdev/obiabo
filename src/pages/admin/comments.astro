
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin - Comments</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@300;400;500;600&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          fontFamily: {
            mono: ['IBM Plex Mono', 'monospace'],
          },
        },
      },
    }
  </script>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    body {
      font-family: 'IBM Plex Mono', monospace;
      background: #141414;
      color: #c8ccda;
      line-height: 1.8;
      min-height: 100vh;
    }
    
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 3rem 1.5rem;
    }
    
    h1 {
      font-size: 1.25rem;
      font-weight: 400;
      color: #c8ccda;
      margin-bottom: 2rem;
      letter-spacing: -0.02em;
    }
    
    h1 span {
      color: #666;
    }
    
    /* Login */
    .login-form {
      max-width: 360px;
      margin: 6rem auto;
    }
    
    .login-form h2 {
      font-size: 1rem;
      font-weight: 400;
      color: #c8ccda;
      margin-bottom: 1.5rem;
    }
    
    .login-form input {
      width: 100%;
      padding: 0.875rem 1rem;
      background: #1a1a1a;
      border: 1px solid #2a2a2a;
      border-radius: 6px;
      color: #c8ccda;
      font-family: inherit;
      font-size: 0.875rem;
      margin-bottom: 1rem;
      transition: border-color 0.2s;
    }
    
    .login-form input:focus {
      outline: none;
      border-color: #444;
    }
    
    .login-form input::placeholder {
      color: #555;
    }
    
    .login-form button {
      width: 100%;
      padding: 0.875rem 1rem;
      background: #c8ccda;
      color: #141414;
      border: none;
      border-radius: 6px;
      font-family: inherit;
      font-size: 0.875rem;
      font-weight: 500;
      cursor: pointer;
      transition: opacity 0.2s;
    }
    
    .login-form button:hover {
      opacity: 0.9;
    }
    
    .login-error {
      color: #e57373;
      font-size: 0.8rem;
      margin-top: 1rem;
    }
    
    /* Stats */
    .stats {
      display: flex;
      gap: 2rem;
      margin-bottom: 2rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid #222;
    }
    
    .stat {
      display: flex;
      align-items: baseline;
      gap: 0.5rem;
    }
    
    .stat-value {
      font-size: 1.5rem;
      font-weight: 600;
      color: #c8ccda;
    }
    
    .stat-label {
      font-size: 0.75rem;
      color: #666;
      text-transform: lowercase;
    }
    
    /* Filters */
    .filter-tabs {
      display: flex;
      gap: 0.25rem;
      margin-bottom: 2rem;
    }
    
    .filter-tab {
      padding: 0.5rem 1rem;
      background: transparent;
      border: none;
      color: #666;
      font-family: inherit;
      font-size: 0.8rem;
      cursor: pointer;
      border-radius: 4px;
      transition: all 0.2s;
    }
    
    .filter-tab:hover {
      color: #888;
    }
    
    .filter-tab.active {
      background: #222;
      color: #c8ccda;
    }
    
    /* Comment Cards */
    .comment-card {
      background: #1a1a1a;
      border-radius: 8px;
      padding: 1.25rem;
      margin-bottom: 0.75rem;
      border-left: 2px solid transparent;
      transition: border-color 0.2s;
    }
    
    .comment-card.pending {
      border-left-color: #f59e0b;
    }
    
    .comment-card.approved {
      border-left-color: #4ade80;
    }
    
    .comment-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 0.75rem;
    }
    
    .comment-author {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }
    
    .comment-name {
      font-size: 0.875rem;
      font-weight: 500;
      color: #c8ccda;
    }
    
    .comment-email {
      font-size: 0.7rem;
      color: #555;
    }
    
    .status-badge {
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.65rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }
    
    .status-badge.pending {
      background: rgba(245, 158, 11, 0.15);
      color: #f59e0b;
    }
    
    .status-badge.approved {
      background: rgba(74, 222, 128, 0.15);
      color: #4ade80;
    }
    
    .comment-post {
      font-size: 0.7rem;
      color: #555;
      margin-bottom: 0.75rem;
    }
    
    .comment-content {
      font-size: 0.875rem;
      color: #999;
      margin-bottom: 0.75rem;
      line-height: 1.7;
    }
    
    .comment-meta {
      font-size: 0.7rem;
      color: #444;
    }
    
    .actions {
      display: flex;
      gap: 0.75rem;
      margin-top: 1rem;
      padding-top: 1rem;
      border-top: 1px solid #222;
    }
    
    .btn {
      padding: 0.65rem 1.5rem;
      border: none;
      border-radius: 6px;
      font-family: inherit;
      font-size: 0.8rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.25s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      white-space: nowrap;
    }
    
    .btn:hover:not(:disabled) {
      transform: translateY(-2px);
    }
    
    .btn:active:not(:disabled) {
      transform: translateY(0);
    }
    
    .btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    
    .btn-approve {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: #fff;
      box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }
    
    .btn-approve:hover:not(:disabled) {
      box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
    }
    
    .btn-reject {
      background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
      color: #fff;
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }
    
    .btn-reject:hover:not(:disabled) {
      box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
    }
    
    .btn-delete {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      color: #fff;
      box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
    }
    
    .btn-delete:hover:not(:disabled) {
      box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
    }
    
    /* Empty & Loading States */
    .empty, .loading {
      text-align: center;
      color: #555;
      padding: 4rem 2rem;
      font-size: 0.875rem;
    }
    
    .error {
      background: rgba(229, 115, 115, 0.1);
      color: #e57373;
      padding: 1rem;
      border-radius: 6px;
      margin-bottom: 1rem;
      font-size: 0.8rem;
    }
    
    /* Logout */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }
    
    .btn-logout {
      padding: 0.4rem 0.75rem;
      background: transparent;
      border: 1px solid #333;
      color: #666;
      font-family: inherit;
      font-size: 0.7rem;
      border-radius: 4px;
      cursor: pointer;
      transition: all 0.2s;
    }
    
    .btn-logout:hover {
      border-color: #555;
      color: #999;
    }
  </style>
</head>
<body>
  <div class="container">
    <div id="app">
      <!-- Login form shown initially -->
      <div id="login-section" class="login-form">
        <h2>admin / comments</h2>
        <input type="password" id="admin-secret" placeholder="enter admin secret" />
        <button onclick="login()">login</button>
        <p id="login-error" class="login-error" style="display: none;"></p>
      </div>

      <!-- Admin panel (hidden initially) -->
      <div id="admin-section" style="display: none;">
        <div class="header">
          <h1>comments <span>/ admin</span></h1>
          <button class="btn-logout" onclick="logout()">logout</button>
        </div>
        
        <div class="stats">
          <div class="stat">
            <div class="stat-value" id="total-count">0</div>
            <div class="stat-label">total</div>
          </div>
          <div class="stat">
            <div class="stat-value" id="pending-count">0</div>
            <div class="stat-label">pending</div>
          </div>
          <div class="stat">
            <div class="stat-value" id="approved-count">0</div>
            <div class="stat-label">approved</div>
          </div>
        </div>

        <div class="filter-tabs">
          <button class="filter-tab active" onclick="setFilter('all')">all</button>
          <button class="filter-tab" onclick="setFilter('pending')">pending</button>
          <button class="filter-tab" onclick="setFilter('approved')">approved</button>
        </div>

        <div id="comments-list">
          <div class="loading">loading comments...</div>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    let adminSecret = '';
    let allComments = [];
    let currentFilter = 'all';

    function logout() {
      adminSecret = '';
      document.getElementById('login-section').style.display = 'block';
      document.getElementById('admin-section').style.display = 'none';
      document.getElementById('admin-secret').value = '';
    }

    function login() {
      const secretInput = document.getElementById('admin-secret');
      adminSecret = secretInput.value;
      
      if (!adminSecret) {
        showLoginError('Please enter the admin secret');
        return;
      }
      
      // Test the credentials by fetching comments
      fetchComments()
        .then(() => {
          document.getElementById('login-section').style.display = 'none';
          document.getElementById('admin-section').style.display = 'block';
        })
        .catch(err => {
          showLoginError('Invalid admin secret');
        });
    }

    function showLoginError(msg) {
      const errorEl = document.getElementById('login-error');
      errorEl.textContent = msg;
      errorEl.style.display = 'block';
    }

    async function fetchComments() {
      const response = await fetch('/api/admin/comments', {
        headers: {
          'Authorization': `Bearer ${adminSecret}`
        }
      });
      
      if (!response.ok) {
        throw new Error('Unauthorized');
      }
      
      const data = await response.json();
      allComments = data.comments || [];
      updateStats();
      renderComments();
    }

    function updateStats() {
      const total = allComments.length;
      const approved = allComments.filter(c => c.approved).length;
      const pending = total - approved;
      
      document.getElementById('total-count').textContent = total;
      document.getElementById('pending-count').textContent = pending;
      document.getElementById('approved-count').textContent = approved;
    }

    function setFilter(filter) {
      currentFilter = filter;
      document.querySelectorAll('.filter-tab').forEach(tab => {
        tab.classList.toggle('active', tab.textContent.toLowerCase() === filter);
      });
      renderComments();
    }

    function renderComments() {
      const container = document.getElementById('comments-list');
      
      let filtered = allComments;
      if (currentFilter === 'pending') {
        filtered = allComments.filter(c => !c.approved);
      } else if (currentFilter === 'approved') {
        filtered = allComments.filter(c => c.approved);
      }
      
      if (filtered.length === 0) {
        container.innerHTML = '<div class="empty">no comments found</div>';
        return;
      }
      
     container.innerHTML = filtered.map(comment => `
  <div class=" border rounded-lg p-4 mb-4 shadow-sm">
    
    <!-- Header -->
    <div class="flex items-start justify-between mb-2">
      <div>
        <div class="font-semibold text-gray-800">
          ${escapeHtml(comment.name)}
        </div>
        ${comment.email ? `
          <div class="text-sm text-gray-500">
            ${escapeHtml(comment.email)}
          </div>
        ` : ''}
      </div>

      <span class="
        text-xs font-medium px-2 py-1 rounded-full
        ${comment.approved
          ? 'bg-green-100 text-green-700'
          : 'bg-yellow-100 text-yellow-700'}
      ">
        ${comment.approved ? 'approved' : 'pending'}
      </span>
    </div>

    <!-- Post -->
    <div class="text-sm text-gray-500 mb-2">
      on: <span class="font-medium">${escapeHtml(comment.postId)}</span>
    </div>

    <!-- Content -->
    <div class="text-gray-700 mb-3">
      ${escapeHtml(comment.content)}
    </div>

    <!-- Meta -->
    <div class="text-xs text-gray-400 mb-3">
      ${new Date(comment.createdAt).toLocaleString()}
    </div>

    <!-- Actions -->
    <div class="flex gap-2">
      ${!comment.approved ? `
        <button
          class="px-3 py-1 text-sm rounded-md bg-green-600 text-white hover:bg-green-700 transition"
          onclick="approveComment('${comment.id}')"
        >
          ✓ approve
        </button>
      ` : `
        <button
          class="px-3 py-1 text-sm rounded-md bg-yellow-500 text-white hover:bg-yellow-600 transition"
          onclick="rejectComment('${comment.id}')"
        >
          ↩ unapprove
        </button>
      `}

      <button
        class="px-3 py-1 text-sm rounded-md bg-red-600 text-white hover:bg-red-700 transition"
        onclick="deleteComment('${comment.id}')"
      >
        ✕ delete
      </button>
    </div>
  </div>
`).join('');

    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    async function approveComment(commentId) {
      try {
        const response = await fetch('/api/admin/comments', {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${adminSecret}`
          },
          body: JSON.stringify({ commentId, approved: true })
        });
        
        if (response.ok) {
          await fetchComments();
        }
      } catch (error) {
        console.error('Failed to approve comment:', error);
      }
    }

    async function rejectComment(commentId) {
      try {
        const response = await fetch('/api/admin/comments', {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${adminSecret}`
          },
          body: JSON.stringify({ commentId, approved: false })
        });
        
        if (response.ok) {
          await fetchComments();
        }
      } catch (error) {
        console.error('Failed to reject comment:', error);
      }
    }

    async function deleteComment(commentId) {
      if (!confirm('Are you sure you want to delete this comment?')) {
        return;
      }
      
      try {
        const response = await fetch('/api/admin/comments', {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${adminSecret}`
          },
          body: JSON.stringify({ commentId })
        });
        
        if (response.ok) {
          await fetchComments();
        }
      } catch (error) {
        console.error('Failed to delete comment:', error);
      }
    }

    // Allow Enter key to login
    document.getElementById('admin-secret').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        login();
      }
    });
  </script>
</body>
</html>
