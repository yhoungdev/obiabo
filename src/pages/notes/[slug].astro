---
export const prerender = false; 

import { getCollection, getEntry } from "astro:content";
import Header from '../../components/header/index.astro';
import '../../style/index.css';


const { slug } = Astro.params;

if (!slug) {
	return new Response(null, {
		status: 404,
		statusText: "Not Found"
	});
}


const note = await getEntry("notes", slug);

if (!note) {
	return new Response(null, {
		status: 404,
		statusText: "Note not found"
	});
}


const allNotes = await getCollection("notes");
const currentIndex = allNotes.findIndex(n => n.slug === slug);
const previousNote = currentIndex > 0 ? allNotes[currentIndex - 1] : null;
const nextNote = currentIndex < allNotes.length - 1 ? allNotes[currentIndex + 1] : null;

const { Content } = await note.render();
const { title, description: desc, tags, pubDate } = note.data;
---

<Header title={title} />
<main class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="w-fit max-w-full flex items-start gap-2 mt-6 mx-auto">
    <main class="container">
      <h1 class="text-2xl md:text-3xl font-bold leading-tight tracking-normal text-default">{title}</h1>
      
      {desc && <p class="text-lg mt-4 mb-6 italic">{desc}</p>}
      
      <p class="mb-8">Published on <b>{pubDate.toLocaleDateString("en-US", { dateStyle: "long" })}</b></p>

      <article class="prose prose-lg max-w-none">
        <Content />
      </article>

      {previousNote || nextNote ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-12">
          {previousNote ? (
            <a href={`/notes/${previousNote.slug}`} class="block p-4 border rounded hover:bg-gray-50">
              <div class="text-sm text-gray-500">← Previous</div>
              <div class="font-medium">{previousNote.data.title}</div>
            </a>
          ) : <div></div>}

          {nextNote ? (
            <a href={`/notes/${nextNote.slug}`} class="block p-4 border rounded hover:bg-gray-50 text-right">
              <div class="text-sm text-gray-500">Next →</div>
              <div class="font-medium">{nextNote.data.title}</div>
            </a>
          ) : null}
        </div>
      ) : null}
      
      <div class="mt-12 pt-8 border-t border-gray-200">
        <a href="/notes" class="text-blue-600 hover:underline">← Back to Notes</a>
      </div>
    </main>
  </div>
</main>

<style>
  .prose {
    color: inherit;
  }
  
  .prose h1 {
    margin-bottom: 1rem;
  }
  
  .prose h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 600;
  }
  
  .prose h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
    font-weight: 600;
  }
  
  .prose p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose a {
    color: #2563eb;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #1d4ed8;
  }
  
  .prose code {
    background-color: #f3f4f6;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
  
  .prose blockquote {
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6b7280;
  }
</style>