---
interface Props {
  postId: string;
}

const { postId } = Astro.props;
---

<div class="webmentions-container" data-post-id={postId}>
  <div class="webmentions-loading">loading mentions...</div>
</div>

<script define:vars={{ postId }}>
  async function loadWebmentions() {
    const container = document.querySelector('[data-post-id="' + postId + '"]');
    if (!container) return;

    try {
      const response = await fetch(`/api/webmentions?postId=${postId}`);
      const data = await response.json();
      const mentions = data.webmentions || [];

      if (mentions.length === 0) {
        container.innerHTML = '';
        return;
      }

      const html = `
        <div class="webmentions">
          <h3>mentions</h3>
          <div class="mentions-list">
            ${mentions.map(m => `
              <div class="mention-item">
                <div class="mention-avatar">
                  ${m.authorImage ? `<img src="${m.authorImage}" alt="${m.author}">` : '<div class="avatar-placeholder">ðŸ”—</div>'}
                </div>
                <div class="mention-content">
                  <div class="mention-author">
                    ${m.authorUrl ? `<a href="${m.authorUrl}" target="_blank">${m.author}</a>` : `<span>${m.author}</span>`}
                    <span class="mention-type">${m.type}</span>
                  </div>
                  ${m.content ? `<p class="mention-text">${m.content}</p>` : ''}
                  <a href="${m.source}" target="_blank" class="mention-source">view mention</a>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `;

      container.innerHTML = html;
    } catch (error) {
      console.error('Error loading webmentions:', error);
      container.innerHTML = '';
    }
  }

  // Load webmentions when page loads
  loadWebmentions();
</script>

<style>
  .webmentions-container {
    margin: 2rem 0;
  }

  .webmentions-loading {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    color: #666;
    text-align: center;
    padding: 2rem 1rem;
  }

  .webmentions {
    background: #1a1a1a;
    border-radius: 8px;
    padding: 1.5rem;
  }

  .webmentions h3 {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.9rem;
    font-weight: 500;
    color: #c8ccda;
    margin: 0 0 1.5rem 0;
    text-transform: lowercase;
  }

  .mentions-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mention-item {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: #0f0f0f;
    border-radius: 6px;
    border-left: 2px solid #333;
    transition: all 0.2s ease;
  }

  .mention-item:hover {
    border-left-color: #c8ccda;
    background: #141414;
  }

  .mention-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background: #222;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mention-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .avatar-placeholder {
    font-size: 1.25rem;
  }

  .mention-content {
    flex: 1;
    min-width: 0;
  }

  .mention-author {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .mention-author a {
    color: #c8ccda;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .mention-author a:hover {
    color: #999;
  }

  .mention-type {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    background: #222;
    color: #666;
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
  }

  .mention-text {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    color: #999;
    margin: 0.5rem 0;
    line-height: 1.4;
  }

  .mention-source {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    color: #666;
    text-decoration: none;
    transition: color 0.2s;
    display: inline-block;
  }

  .mention-source:hover {
    color: #c8ccda;
  }
</style>
