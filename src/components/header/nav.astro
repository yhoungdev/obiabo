---
const navItems = [
  {
    title: 'Home',
    path: '/'
  },
  {
    title: 'Howdy',
    path: '/about'
  },
  {
    title: 'Notes',
    path: '/notes'
  },
  {
    title: 'Reach',
    path: '/reach'
  },
];
---

<nav class="flex items-center justify-center mx-auto mt-4">
  <div class="flex items-center text-sm gap-4">
    {navItems.map((item) => (
      <a
        href={item.path}
        class={`hover:text-yellow-600 hover:underline ${
          Astro.url.pathname === item.path ? 'text-yellow-600 underline' : ''
        }`}
      >
        {item.title}
      </a>
    ))}
  </div>
</nav>
