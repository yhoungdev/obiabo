---
interface Props {
  blocks: any[];
}

const { blocks } = Astro.props as Props;

// Extract headings from blocks
const headings = blocks
  .filter(block => block._type === 'block' && block.style && block.style.startsWith('h'))
  .map((block, index) => ({
    id: `heading-${index}`,
    text: block.children?.[0]?.text || '',
    level: parseInt(block.style.replace('h', ''))
  }))
  .filter(h => h.text);
---

{headings.length > 0 && (
  <nav class="table-of-contents">
    <div class="toc-header">table of contents</div>
    <ul class="toc-list">
      {headings.map(heading => (
        <li class={`toc-item toc-level-${heading.level}`}>
          <a href={`#${heading.id}`} class="toc-link">
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .table-of-contents {
    background: #1a1a1a;
    border-radius: 8px;
    padding: 1.5rem;
    margin: 2rem 0;
    border-left: 3px solid #c8ccda;
  }

  .toc-header {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.85rem;
    font-weight: 500;
    color: #c8ccda;
    margin-bottom: 1rem;
    text-transform: lowercase;
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .toc-item {
    margin: 0;
    padding: 0;
  }

  .toc-level-2 {
    margin-left: 0;
  }

  .toc-level-3 {
    margin-left: 1rem;
  }

  .toc-level-4 {
    margin-left: 2rem;
  }

  .toc-link {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.8rem;
    color: #999;
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .toc-link:hover {
    color: #c8ccda;
    margin-left: 4px;
  }
</style>
